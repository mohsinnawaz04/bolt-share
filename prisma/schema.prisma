generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Bundle {
  id        String   @id @default(cuid())
  slug      String   @unique
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id        String   @id @default(cuid())
  name      String
  size      Int
  type      String
  url       String
  bundleId  String
  bundle    Bundle   @relation(fields: [bundleId], references: [id])
  createdAt DateTime @default(now())
}
